@using PagedList.Mvc;
@model PagedList.IPagedList<LaptopViewModel>

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-3">
            <div class="panel-group">
                <div class="panel panel-default">
                    <img src="@item.ImageUrl" alt="@item.Manufacturer @item.Model" />
                    <div class="text-center">@item.Manufacturer @item.Model</div>
                        <div class="text-center">@item.MonitorSize"</div>
                        <div class="text-center">@item.HardDiskSize GB</div>
                        <div class="text-center">@item.RamMemorySize RAM</div>
                        <div class="text-center">@item.Weight kg</div> <br/>
                        <div class="text-center">
                            <a href="@Url.Action("Details", "Home", new { item.Id })" class="text-center">More Info</a>
                        </div><br />
                        <div class="text-center padding-5px">
                            <a href="@Url.Action("Details", "Home", new { item.Id })" class="text-center btn btn-info">
                                @item.Price $
                            </a>
                        </div>
                </div>
            </div>
        </div>
    }
</div>

@Html.PagedListPager(Model, page => Url.Action("Index", new { page } ))